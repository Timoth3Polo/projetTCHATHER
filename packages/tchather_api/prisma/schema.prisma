// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


enum ConversationTypes {
  ONE_TO_ONE
  GROUP
}

model User {
  userId  String @id @default(uuid())
  userName String @unique
  userEmail String @unique
  userPassword String 
  userConversations Conversation[]
  userConversationOwned Conversation[] @relation("userConversationOwned")
  userMessages Message[]
}

model Message {
  messageId String @id @default(uuid())
  messageText String
  messageAttachments Attachment[]
  messageUserSenderId String
  messageUserSender User @relation(fields: [messageUserSenderId], references: [userId])
  conversations Conversation[]

}

model Conversation {
  conversationId String @id @default(uuid())
  conversationName String
  conversationType ConversationTypes
  conversationUserOwnerId String
  conversationUserOwner User @relation("userConversationOwned", fields: [conversationUserOwnerId], references: [userId])
  conversationUsers User[]
  conversationMessages Message[]
}

model Attachment {
  attachmentId String @id @default(uuid())
  attachmentFileType String
  attachmentFileName String
  attachmentUrl String
  attachmentMessageId String
  attachmentMessage Message @relation(fields: [attachmentMessageId], references: [messageId]) 
}